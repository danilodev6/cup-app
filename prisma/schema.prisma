generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

